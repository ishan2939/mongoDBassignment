<%- include('./includes/head.ejs') %><!-- head EJS -->
    <link rel="stylesheet" href="http://localhost:3000/public/product.css"><!-- product CSS -->
    </head><!-- head ends here -->

    <body><!-- body starts here -->

        <div class="container"><!-- conatiner div -->

            <%- include('./includes/navbar.ejs') %><!-- navbar -->

                <div class="content"><!-- content div -->
                    
                    <div class="part1"><!-- part1 -->
                        
                        <div class="name"><!-- product name -->
                            <%= response[0].name %>
                        </div>
                        
                        <div class="location"><!-- where is product from -->
                            <%= response[0].location %>
                        </div>
                        
                        <% if(response[0].organic==true) {%><!-- organic -->
                            
                            <div class="organic">
                                <div class="answer">100% organic</div>
                            </div>
                        <% } %>
                            
                        <div class="cart"><!-- add to cart -->
                            <a href="/addtocart?id=<%= response[0]._id %>&route=product/<%= response[0]._id %>">
                                <div class="carticon">
                                    <svg stroke="currentColor" fill="currentColor" stroke-width="0"
                                        viewBox="0 0 20 20" height="1em" width="1em"
                                        xmlns="http://www.w3.org/2000/svg">
                                        <path
                                            d="M3 1a1 1 0 000 2h1.22l.305 1.222a.997.997 0 00.01.042l1.358 5.43-.893.892C3.74 11.846 4.632 14 6.414 14H15a1 1 0 000-2H6.414l1-1H14a1 1 0 00.894-.553l3-6A1 1 0 0017 3H6.28l-.31-1.243A1 1 0 005 1H3zM16 16.5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0zM6.5 18a1.5 1.5 0 100-3 1.5 1.5 0 000 3z">
                                        </path>
                                    </svg>
                                </div>
                                Add to Cart
                            </a>
                        </div>
                        
                        <div class="desc"><!-- product description -->
                            <%= response[0].desc %>
                        </div>
                    
                    </div><!-- part1 ends here -->
                    
                    <div class="part2"><!-- part2 starts here -->

                        <div class="iconContainer">
                            <div class="productIcon">
                                
                                <div class="icon"><!-- product icon -->
                                    <%= response[0].icon %>
                                </div>
                                
                                <div class="type <%= response[0].type=='veg'?'veg':'nonveg' %>"><!-- product type -->
                                    <div class="dot"></div>
                                </div>
                                
                                <div class="price"><!-- product price -->
                                    <div class="value">
                                        <%= response[0].price %>
                                    </div>
                                </div>
                            
                            </div>
                        
                        </div>
                    
                    </div><!-- part2 ends here -->
                    
                    <div class="part3"><!-- part3 starts here -->
                        
                        <!-- product category -->
                        <!-- <div class="category">
                            Category: <%= response[0].category %>
                        </div> -->
                        

                        <div class="nutrientsContainer"><!-- product nutrients -->
                            Nutrients:
                            <div class="nutrients">
                                <% for(n of response[0].nutrients){ %>
                                    <div class="nutrient">
                                        <%= n %>
                                    </div>
                                    <% } %>
                            </div>
                        </div>
                    
                    </div><!-- part3 ends here -->

                </div><!-- content ends here -->
        </div><!-- container ends here -->
    
    </body><!-- body ends here -->

</html><!-- html ends here -->